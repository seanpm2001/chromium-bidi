{
  "name": "chromium-bidi",
  "version": "0.4.2",
  "description": "An implementation of the WebDriver BiDi protocol for Chromium implemented as a JavaScript layer translating between BiDi and CDP, running inside a Chrome tab.",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -b src/tsconfig.json && npm run rollup",
    "rollup": "rollup --config configs/rollup.config.js && rollup --config configs/rollup-mapper.config.js",
    "prepare": "npm run clean",
    "clean": "rimraf lib",
    "e2e": "npm run e2e-headless",
    "e2e-headful": "npm run server-no-build -- --headless=false & npm run e2e-only",
    "e2e-headless": "npm run server-no-build & npm run e2e-only",
    "e2e-only": "python3 -m pytest --rootdir=tests",
    "lint": "npx prettier --check .",
    "server": "npm run build && npm run server-no-build --",
    "server-no-build": "node lib/cjs/bidiServer/index.js",
    "test": "npm run unit",
    "prettier": "npx prettier --write .",
    "unit": "cross-env TS_NODE_PROJECT='src/tsconfig.json' mocha"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GoogleChromeLabs/chromium-bidi.git"
  },
  "author": "The Chromium Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "argparse": "^2.0.1",
    "debug": "^4.3.4",
    "devtools-protocol": "^0.0.1007249",
    "mitt": "3.0.0",
    "puppeteer": "14.1.2",
    "tslib": "^2.4.0",
    "websocket": "^1.0.34",
    "ws": "^8.6.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/argparse": "^2.0.10",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.11",
    "@types/websocket": "^1.0.5",
    "@types/ws": "^8.5.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-exclude": "^2.1.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.0.0",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.74.1",
    "rollup-plugin-dts": "^4.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "terser": "^5.14.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
